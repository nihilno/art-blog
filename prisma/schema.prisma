generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Post {
  id String @id @default(uuid())
  type Type

  title String
  description String
  imageUrl String
  durationInMinutes Int
  label String
  slug String @unique

  instagramLink String?
  twitterLink String?
  youtubeLink String?

  spotifyLink String?
  applePodcastLink String?
  soundCloudLink String?
  episodeNumber Int?

  authorId Int
  author Author @relation(fields: [authorId], references: [id] , onDelete: Cascade)

  createdAt DateTime @default(now())

  @@index([type, createdAt])
}

enum Type {
  ARTICLE
  PODCAST
}

model Author {
  id Int @id @default(autoincrement())
  name String
  imageUrl String
  slug String @unique
  occupation String
  city String
  description String
  content String
  instagramLink String?
  twitterLink String?
  youtubeLink String?

  posts Post[]
  
  createdAt DateTime @default(now())
}